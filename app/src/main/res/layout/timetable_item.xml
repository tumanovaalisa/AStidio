<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название направления"
                android:fontFamily="sans-serif-black"
                android:textSize="16dp"
                android:textColor="@color/names"
                android:id="@+id/dance_TV"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_TV"
                android:layout_marginBottom="10dp"
                android:text="Начало - конец  ~  Дата"
                android:textColor="@color/purple"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/img_teacher"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_TV"
                    android:layout_marginLeft="10dp"
                    android:text="Фамилия Имя"
                    android:fontFamily="sans-serif-black"
                    android:textSize="16dp"
                    android:textColor="@color/names"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_purple"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="Кол-во мест"
                    android:textColor="@color/purple"
                    android:background="@color/light_purple"/>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Я приду!"
                android:backgroundTint="@color/purple"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:cornerRadius="30dp"
                android:id="@+id/enrol"
                app:strokeColor="@color/white"/>
            
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>